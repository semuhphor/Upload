<p> form </p>
<%= form_for( @image, :html => { :multipart => true } ) do |f| %>
  <p>
    <%= f.label :name, 'Title' %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :upload, 'File' -%>
    <%= f.file_field :upload -%>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p><%= f.submit( 'Upload' ) %></p>
<% end %>
<p> end of form </p>
